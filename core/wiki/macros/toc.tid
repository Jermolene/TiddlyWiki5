		<%if [<currentTiddler>] -[subfilter<tf.toc-hide>] %>
			<$let __path=<<tf.toc-newPath>>>
				<$set name="__excluded" filter="[subfilter<exclude>] [<tag>] [subfilter<tf.toc-hide>]">
					<% if [all[current]toc-link[no]] %>
