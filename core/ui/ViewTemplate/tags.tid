title: $:/core/ui/ViewTemplate/tags
tags: $:/tags/ViewTemplate

\whitespace trim
<$reveal type="nomatch" stateTitle=<<folded-state>> text="hide" tag="div" retain="yes" animate="yes">
<div class="tc-tags-wrapper">
	<% if [{$:/config/Tags/CustomSort/enabled}trim[]match[yes]] %>
		<$list filter="[all[current]tags[]] :sort:alphanumeric:caseinsensitive[subfilter{$:/config/Tags/CustomSort/subfilter}]"
			template="$:/core/ui/TagTemplate"
			storyview="pop"
		/>
	<% else %>
		<$list filter="[all[current]tags[]sort[title]]"
			template="$:/core/ui/TagTemplate"
			storyview="pop"
		/>
	<% endif %>
</div>
</$reveal>
