\import [[$:/themes/tiddlywiki/vanilla/base]]

\define bcHeight() 22
\define bcPaddingTop() 3
\define bcPaddingBottom() 3

.tc-breadcrumbs .tc-crumb-first::after,
.tc-breadcrumbs .tc-crumb::after {
	content: "/";
	position: absolute;
	padding-left: .2em;
	color: <<colour foreground>>;
}

.tc-breadcrumbs .tc-crumb::before {
	content: "";
	position: absolute;
}

.tc-breadcrumbs .tc-crumb-first,
.tc-breadcrumbs .tc-crumb {
	position: relative;
	display: inline-block;
	margin-right: {{{ [<bcHeight>divide[2]] }}}px;
}

.tc-breadcrumbs .tc-crumb {
	padding-left: 0;
}

.tc-breadcrumbs .tc-crumb-first {
	padding-left: initial;
	margin-left: 0;
}

.tc-breadcrumbs .tc-crumb-current::after {
	content: "";
}

@media (min-width: <<sidebarbreakpoint>>) {

	.tc-breadcrumbs .tc-crumb-first,
	.tc-breadcrumbs .tc-crumb {
		padding: {{{ [<bcPaddingTop>] }}}px .5em {{{ [<bcPaddingBottom>] }}}px 1em;
		margin-right: {{{ [<bcHeight>divide[2]] }}}px;
		line-height: {{{ [<bcHeight>] }}}px;
		position: relative;
		background: <<colour message-background>>;
	}

	.tc-breadcrumbs .tc-crumb-first {
		padding-left: .5em;
	}

	.tc-breadcrumbs .tc-crumb::before {
		content: "";
		position: absolute;
		left: 0;
		bottom: 0;
		border-left: {{{ [<bcHeight>divide[2]] }}}px solid <<colour background>>;
		border-top: {{{ [<bcHeight>add<bcPaddingTop>add<bcPaddingBottom>] +[divide[2]] }}}px solid transparent;
		border-bottom: {{{ [<bcHeight>add<bcPaddingTop>add<bcPaddingBottom>] +[divide[2]] }}}px solid transparent;
	}

	.tc-breadcrumbs .tc-crumb-first::after,
	.tc-breadcrumbs .tc-crumb::after {
		content: "";
		position: absolute;
		right: {{{ [<bcHeight>add<bcPaddingTop>add<bcPaddingBottom>] +[divide[2]multiply[-1]] }}}px;
		bottom: 0;
		border-left: {{{ [<bcHeight>divide[2]] }}}px solid <<colour message-background>>;
		border-top: {{{ [<bcHeight>add<bcPaddingTop>add<bcPaddingBottom>] +[divide[2]] }}}px solid transparent;
		border-bottom: {{{ [<bcHeight>add<bcPaddingTop>add<bcPaddingBottom>] +[divide[2]] }}}px solid transparent;
	}

}

