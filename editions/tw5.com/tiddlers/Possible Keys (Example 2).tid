\define getText() 
<$vars tv-wikilinks="no">

* event-key: ''$(event-key)$''
* event-code: ''$(event-code)$''
* modifier: ''$(modifier)$''
</$vars>
\end

\define actionKey()
<$action-setfield $tiddler="$:/temp/key-test/action" text=<<getText>> />
\end

\define keys()
((my-1)) ((my-2)) ((my-3))
\end

