* code: ''$(code)$''
* modifierKey: ''$(modifierKey)$''
</$vars>
\end

\define actionKey()
<$action-setfield $tiddler="$:/temp/key-test/action" text=<<getText>> />
\end

\define keys()
1 2 3
shift+1 shift+2 shift+3
a s d
f1 f2 f3
\end

