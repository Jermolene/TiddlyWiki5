<$list filter="[[$:/temp/key-test]!has[title]]" >
  <$button>Play with me!
    <$action-setfield $tiddler="$:/temp/key-test" text=""/>
    <$action-setfield $tiddler="$:/temp/key-test/action" text=<<getText>>/>
  </$button>
</$list>
<$list filter="[[$:/temp/key-test]has[title]]" >
  <$button>Close
    <$action-deletetiddler $tiddler="$:/temp/key-test"/>
    <$action-deletetiddler $tiddler="$:/temp/key-test/action"/>
  </$button>

  <$keyboard key={{{ [enlist<keys>join[ ]] }}} actions=<<actionKey>> >
	<$edit-text tiddler="$:/temp/key-test" placeholder="- hit key from list below -" tag=input focus />
  </$keyboard>
</$list>

