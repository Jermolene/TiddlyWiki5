title: $:/themes/tiddlywiki/vanilla/print
tags: $:/tags/Stylesheet

\define print-states(field) $:/state/print-river!!$field$
\define set-page-break-tiddlers()

@media print {
	[data-tiddler-title='$(currentTiddler)$'].tc-tiddler-frame {
		page-break-before: always;
	}
}

\end

.tc-print-tiddler-window-overlay p {
	display: inline-block;
	margin: 0;
	-webkit-margin-before: 0em;
	-webkit-margin-after: 0em;
}

.tc-print-tiddler-window-overlay button {
	padding: .2em .5em 0em .5em;
	font-size: 1.2em;
	outline: none;
}

.tc-print-tiddler-window-overlay button.tc-print-tiddler-print-button {
	padding-bottom: 0.1em;
}

.tc-print-tiddler-list-view .tc-story-river {
	padding: 0;
	width: calc(100vw - 2.05em);
}

.tc-print-tiddler-list-view .tc-tiddler-frame {
	box-shadow: none;
	border: none;
	width: calc(100vw - 2.05em);
}

.tc-print-tiddler-list-view .tc-print-tiddler-button {
	display: none;
}

.tc-print-sort-drop-down {
	text-align: left;
	-webkit-box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
	-moz-box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
	box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
	padding: 1em 2em 1em 1em;
	opacity: 1;
	border-radius: 4px;
	background-color: white;
}

.tc-page-container:not(.tc-print-tiddler-list-view) .tc-page-break-button {
	display: none;
}

<$reveal state=<<print-states "show-titles">> type="nomatch" text="yes">

.tc-print-tiddler-list-view .tc-tiddler-frame .tc-tiddler-title-icon, .tc-print-tiddler-list-view .tc-tiddler-frame .tc-title {
	display: none;
}

@media print {

.tc-print-tiddler-list-view .tc-tiddler-frame .tc-tiddler-title {
display: none;
}

}

</$reveal>

<$reveal state=<<print-states "show-subtitles">> type="nomatch" text="yes">

.tc-print-tiddler-list-view .tc-tiddler-frame .tc-subtitle {
	display: none;
}

@media print {

.tc-print-tiddler-list-view .tc-tiddler-frame .tc-subtitle {
	display: none;
}

}

</$reveal>

<$reveal state=<<print-states "show-tags">> type="nomatch" text="yes">

.tc-print-tiddler-list-view .tc-tiddler-frame  .tc-tags-wrapper {
display: none;
}

@media print {

.tc-print-tiddler-list-view .tc-tiddler-frame  .tc-tags-wrapper {
	display: none;
}

}

</$reveal>

<$reveal state=<<print-states "show-titles">> type="match" text="yes">

@media print {

.tc-print-tiddler-list-view .tc-tiddler-frame .tc-tiddler-title {
	display: inline-block;
}

}

</$reveal>

<$reveal state=<<print-states "show-subtitles">> type="match" text="yes">

@media print {

.tc-print-tiddler-list-view .tc-tiddler-frame .tc-subtitle {
	display: inline-block;
}

}

</$reveal>

<$reveal state=<<print-states "show-tags">> type="match" text="yes">

@media print {

.tc-print-tiddler-list-view .tc-tiddler-frame .tc-tags-wrapper {
	display: inline-block;
}

}

</$reveal>


@media print {

.tc-print-tiddler-window-overlay {
	display: none;
}

}

<$list filter="[all[tiddlers]removeprefix[$:/state/print-page-break/]]">

<<set-page-break-tiddlers>>

</$list>
